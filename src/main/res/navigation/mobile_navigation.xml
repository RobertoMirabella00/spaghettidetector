<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.spaghettidetector.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_detect"
        android:name="com.example.spaghettidetector.ui.detect.DetectFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_detect" />

    <fragment
        android:id="@+id/navigation_archive"
        android:name="com.example.spaghettidetector.ui.archive.ArchiveFragment"
        android:label="@string/title_notifications"
